<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fxtools">
        <item name="android:id">@id/toolbar</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="titleTextColor">@color/white</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_textColor">@color/gray</item>
        <item name="atg_backgroundColor">@drawable/sp_edit</item>
        <item name="atg_checkedTextColor">@color/white</item>
        <item name="atg_checkedBackgroundColor">@drawable/sp_app_deep</item>
        <item name="atg_textSize">13sp</item>
        <item name="atg_horizontalSpacing">12dp</item>
        <item name="atg_verticalSpacing">8dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">8dp</item>
    </style>

    <style name="text_null">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/gray_DCDCDC</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTop">@drawable/ico_null</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:id">@id/tv_null</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/select_btn_bg_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="line_style">
        <item name="android:background">@color/line_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>


    <style name="CalendarCard">

    </style>

    <style name="CalendarCard.Root">
        <item name="android:padding">8dp</item>
    </style>

    <style name="CalendarCard.Day">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color5A</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarCard.Days">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="CalendarCard.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarCard.Grid">
        <item name="android:paddingRight">1px</item>
        <item name="android:paddingBottom">1px</item>
    </style>

    <style name="CalendarCard.Cell">
        <item name="android:background">@drawable/card_item_bg</item>
        <item name="android:layout_marginLeft">1px</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dp</item>
    </style>
</resources>