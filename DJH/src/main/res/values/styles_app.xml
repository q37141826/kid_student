<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <style name="FxAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_bg</item>
        <item name="colorPrimaryDark">@color/app_bg</item>
        <item name="colorAccent">@color/app_bg</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!--设置actionBarSize，如果想修改成全通用（包括v4），必须设置两个属性才能实现-->
        <item name="android:actionBarSize">44dp</item>
        <item name="actionBarSize">44dp</item>
        <!--状态栏字颜色-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>


    </style>

    <style name="NoTitle">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="FxAppTheme">

    </style>

    <style name="translucentActivity" parent="FxAppTheme">
        <item name="colorPrimary">@color/subtransparent</item>
        <item name="colorPrimaryDark">@color/subtransparent</item>
        <item name="colorAccent">@color/subtransparent</item>
        <item name="android:windowBackground">@color/subtransparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>