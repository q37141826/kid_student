<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/gray_F5F5F5">



    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/study_item_bg"
        android:gravity="center">
        <!-- android:background="@drawable/study_bg"-->
        <RelativeLayout
            android:id="@+id/itemimageroot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_centerInParent="true"
            android:background="@drawable/round_bg_white_choice"
            android:padding="10dp">

            <ImageView
                android:id="@+id/itemimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_typename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemimageroot"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="点读本"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/text17"/>


    </RelativeLayout>
</RelativeLayout>
