<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/sp_call_1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/undone_item_type"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/text13"
            android:textColor="@color/white"
            android:padding="4dp"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/tv_undone_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/undone_item_type"
            android:layout_toLeftOf="@+id/img_undone_item_to"
            android:ellipsize="end"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text18"
            android:textColor="#333333"
            android:maxLines="2"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/img_undone_item_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ico_to"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/blue_line"/>
</LinearLayout>