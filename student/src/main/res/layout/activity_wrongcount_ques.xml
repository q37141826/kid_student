<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_tool_text" />

            <cn.dajiahui.kid.ui.paper.view.PieChartView
                android:id="@+id/view_pieChart"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@+id/toolbar" />

            <com.fxtx.framework.widgets.BasicListView
                android:id="@+id/view_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_pieChart"
                android:layout_marginTop="5dp"
                android:divider="@null"
                android:dividerHeight="0dp" />

            <TextView style="@style/text_null"
                android:layout_below="@id/view_pieChart"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>