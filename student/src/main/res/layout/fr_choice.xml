<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whilte_line">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="听音频对话，去判断正确错误！"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/ring"/>

            <ImageView
                android:id="@+id/img_conment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_play"
                android:layout_centerInParent="true"
                android:src="@drawable/conment"/>

            <TextView
                android:id="@+id/choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="选择"
                android:textSize="20dp"/>

            <cn.dajiahui.kid.ui.homework.view.OpenListView
                android:id="@+id/listview"
                android:layout_weight="1"
                android:layout_below="@+id/img_conment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

</ScrollView>