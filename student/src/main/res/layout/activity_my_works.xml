<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte_line"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/layout_tool_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bookaudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="@dimen/textmarginleft"
                android:gravity="center"
                android:padding="@dimen/textmarginleft"
                android:text="@string/mine_textbook_audio"
                android:textColor="@color/color5A"
                android:textSize="@dimen/text18"/>

            <TextView
                android:id="@+id/tv_caraok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="@dimen/textmarginleft"
                android:gravity="center"
                android:padding="@dimen/textmarginleft"
                android:text="@string/mine_cara"
                android:textColor="@color/color5A"
                android:textSize="@dimen/text18"/>
        </LinearLayout>

        <include layout="@layout/child_listview"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/whilte_line"
            android:text="@string/delete"
            android:textColor="@color/gray"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
