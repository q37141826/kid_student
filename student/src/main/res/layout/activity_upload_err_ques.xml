<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_tool_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_upload_errQues1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/blue_line"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="@string/wrong_upload_first_ques" />

            <FrameLayout
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginBottom="5dp"
                    android:id="@+id/iv_upload_errQues1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ico_w_photo" />

                <ImageView
                    android:id="@+id/iv_delete_img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|top"
                    android:scaleType="center"
                    android:src="@drawable/ico_p_delete"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/iv_upload_errQues2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ico_w_photo" />

                <ImageView
                    android:id="@+id/iv_delete_img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|top"
                    android:scaleType="center"
                    android:src="@drawable/ico_p_delete"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/blue_line"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="@string/wrong_upload_by_canmera" />

            <FrameLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerInside"
                    android:id="@+id/iv_upload_myanswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_delete_img3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|top"
                    android:scaleType="center"
                    android:src="@drawable/ico_p_delete"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_upload_myAnswer"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/select_btn_bg_yellow"
                android:gravity="center"
                android:text="@string/wrong_upload_myanswer"
                android:textColor="@color/white"
                android:textSize="@dimen/text18" />

            <TextView
                android:id="@+id/tv_upload_go_errbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:gravity="center"
                android:text="@string/wrong_go_errbook" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
