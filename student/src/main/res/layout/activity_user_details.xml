<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/layout_tool_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re_user_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/textmarginleft"
                android:text="@string/tv_user_icon"
                android:textColor="@color/color5A"
                android:textSize="@dimen/text18"/>

            <ImageView
                android:id="@+id/img_user_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/img_user_icon_to"
                android:padding="10dp"
                android:src="@drawable/ico_default_user"/>

            <ImageView
                android:id="@+id/img_user_icon_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/textmarginleft"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:id="@+id/re_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/textmarginleft"
                android:text="@string/tv_user_name"
                android:textSize="@dimen/text18"/>

            <EditText
                android:id="@+id/tv_user_name_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/textmarginleft"
                android:textSize="@dimen/text16"
                android:layout_alignTop="@id/image1"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@id/image1"
                android:layout_toRightOf="@id/image1"
                android:cursorVisible="true"
                android:lineSpacingExtra="8dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/sp_while"
               />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:id="@+id/re_user_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/textmarginleft"
                android:text="@string/sex"
                android:textSize="@dimen/text18"/>

            <TextView
                android:id="@+id/tv_user_sex_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/textmarginleft"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ico_to"
                android:textSize="@dimen/text16"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:id="@+id/re_user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/textmarginleft"
                android:text="@string/tv_user_age"
                android:textSize="@dimen/text18"/>


            <TextView
                android:id="@+id/tv_user_age_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/textmarginleft"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ico_to"
                android:textSize="@dimen/text16"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray"/>


    </LinearLayout>


</LinearLayout>
