<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_tool_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re_user_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_icon"
                    android:textColor="@color/color5A"
                    android:textSize="@dimen/text18" />

                <ImageView
                    android:id="@+id/img_user_icon_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:background="@drawable/ico_to" />

                <ImageView
                    android:id="@+id/img_user_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_toLeftOf="@+id/img_user_icon_to"
                    android:padding="10dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a" />

            <RelativeLayout
                android:id="@+id/re_user_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_user_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_sign"
                    android:textSize="@dimen/text20" />


                <TextView
                    android:id="@+id/tv_user_sign_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:layout_toRightOf="@+id/tv_user_sign"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ico_to"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/re_user_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_account"
                    android:textSize="@dimen/text18" />

                <ImageView
                    android:id="@+id/img_user_account_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:background="@drawable/ico_to" />

                <TextView
                    android:id="@+id/tv_user_account_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_user_account_to"
                    android:padding="@dimen/textmarginleft"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a" />

            <RelativeLayout
                android:id="@+id/re_user_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_pwd"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/text_user_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ico_to" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a" />

            <RelativeLayout
                android:id="@+id/re_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_phone"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ico_to"
                    android:padding="@dimen/textmarginleft"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a" />

            <RelativeLayout
                android:id="@+id/re_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_name"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tv_user_name_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ico_to"
                    android:padding="@dimen/textmarginleft"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a" />

            <RelativeLayout
                android:id="@+id/re_user_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/sex"
                    android:textSize="@dimen/text18" />

                <TextView
                    android:id="@+id/tv_user_sex_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ico_to"
                    android:textSize="@dimen/text16" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/re_user_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_birth"
                    android:textSize="@dimen/text18" />


                <TextView
                    android:id="@+id/tv_user_birth_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ico_to"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/re_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/textmarginleft"
                    android:text="@string/tv_user_email"
                    android:textSize="@dimen/text18" />


                <TextView
                    android:id="@+id/tv_user_email_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/textmarginleft"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ico_to"
                    android:textSize="@dimen/text16" />
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textline"
                android:background="@color/app_bg_a" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
